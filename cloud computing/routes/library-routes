const libraryControllers = require('../controllers/library-controllers');
const routes = require('express').Router();

routes.post('/addToLibrary', (req, res) => {
  const { username, books_id } = req.body;

  libraryControllers.addBookToLibrary(username, books_id)
    .then(result => res.json(result))
    .catch(err => res.json(err));
});

routes.get('/user/:username', (req, res) => {
  const { username } = req.params;

  libraryControllers.getUserLibrary(username)
    .then(result => res.json(result))
    .catch(err => res.json(err));
});

module.exports = routes;
