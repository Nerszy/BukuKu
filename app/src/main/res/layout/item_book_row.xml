<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/linearBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:contentDescription="@string/book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sample_book" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:maxLines="2"
        android:text="@string/book_title"
        android:textSize="11sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/linearBook"
        app:layout_constraintStart_toStartOf="@+id/linearBook"
        app:layout_constraintTop_toBottomOf="@+id/linearBook" />
</androidx.constraintlayout.widget.ConstraintLayout>